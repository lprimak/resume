<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.flowlogix</groupId>
    <artifactId>resume</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.asciidoctor</groupId>
                <artifactId>asciidoctor-maven-plugin</artifactId>
                <version>3.0.0</version>
                <dependencies>
                    <dependency>
                        <groupId>org.asciidoctor</groupId>
                        <artifactId>asciidoctorj</artifactId>
                        <version>3.0.0</version>
                    </dependency>
                    <dependency>
                        <groupId>org.asciidoctor</groupId>
                        <artifactId>asciidoctorj-pdf</artifactId>
                        <version>2.3.18</version>
                    </dependency>
                </dependencies>
                <configuration>
                    <sourceDirectory>${basedir}/content</sourceDirectory>
                    <outputDirectory>${project.build.directory}/output</outputDirectory>
                    <attributes>
                        <stylesheet>${project.build.directory}/output/css/style.css</stylesheet>
                    </attributes>
                    <resources>
                        <resource>
                            <directory>content</directory>
                            <includes>
                                <include>icons/**</include>
                                <include>css/**</include>
                            </includes>
                        </resource>
                        <resource>
                            <directory>asciidoctor-skins</directory>
                            <includes>
                                <include>css/adoc-rocket-panda.css</include>
                            </includes>
                        </resource>
                    </resources>
                </configuration>
                <executions>
                    <execution>
                        <id>output-html</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>process-asciidoc</goal>
                        </goals>
                        <configuration>
                            <backend>html</backend>
                        </configuration>
                    </execution>
                    <execution>
                        <id>output-pdf</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>process-asciidoc</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/output/asciidoc-pdf</outputDirectory>
                            <backend>pdf</backend>
                            <skip>${generate.pdf.skip}</skip>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>generate-pdf-skip-internal</id>
            <properties>
                <generate.pdf.skip>true</generate.pdf.skip>
            </properties>
            <activation>
                <property>
                    <name>generate.pdf</name>
                    <value>!true</value>
                </property>
            </activation>
        </profile>
    </profiles>
</project>
